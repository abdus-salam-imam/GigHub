@model GigHub.viewModels.GigsFormViewModel
@{
    ViewBag.Title = "New";
}

<h2>Add a Gig</h2>



@using (Html.BeginForm("Create", "Gigs"))
{

    @Html.AntiForgeryToken()

    <div class="form-group">

        @Html.LabelFor(g => g.Venue)
        @Html.TextBoxFor(g => g.Venue, new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Venue)



    </div>
    <div class="form-group">

        @Html.LabelFor(g => g.Date)
        @Html.TextBoxFor(g => g.Date, new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Date)




    </div>
    <div class="form-group">

        @Html.LabelFor(g => g.Time)
        @Html.TextBoxFor(g => g.Time, new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Time)



    </div>

    <div class="form-group">

        @Html.LabelFor(g => g.GenreId);
        @Html.DropDownListFor(g => g.GenreId, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.GenreId)


    </div>


    <button type="submit" class="btn btn-primary">Save</button>




}


@section scripts

    {



    @Scripts.Render("~/bundles/jqueryval")


}





