@model GigHub.viewModels.GigsFormViewModel
@{
    ViewBag.Title = "New";
}

<h2>Add a Gig</h2>


<form>

    <div class="form-group">

        @Html.LabelFor(g => g.Venue)
        @Html.TextBoxFor(g => g.Venue, new { @class = "form-control" })



    </div>
    <div class="form-group">

        @Html.LabelFor(g => g.Date)
        @Html.TextBoxFor(g => g.Date, new { @class = "form-control" })



    </div>
    <div class="form-group">

        @Html.LabelFor(g => g.Time)
        @Html.TextBoxFor(g => g.Time, new { @class = "form-control" })



    </div>

    <div class="form-group">

        @Html.LabelFor(g => g.Genres);
        @Html.DropDownListFor(g => g.GenreId,new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })


    </div>


    <button type="submit" class="btn btn-primary">Save</button>

</form>