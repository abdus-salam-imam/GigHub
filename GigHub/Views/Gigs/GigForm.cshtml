@model GigHub.viewModels.GigsFormViewModel
@{
    ViewBag.Title = Model.Heading;
}

<h2>@Model.Heading</h2>



@using (Html.BeginForm(Model.Action, "Gigs"))
{

    @Html.AntiForgeryToken()

    <p class="alert alert-info">All fields are <strong>Required</strong> </p>

    <div class="form-group">

        @Html.LabelFor(g => g.Venue)
        @Html.TextBoxFor(g => g.Venue, new { @class = "form-control",autofocus ="autofocus" })
        @Html.ValidationMessageFor(g => g.Venue)



    </div>
    <div class="form-group">

        @Html.LabelFor(g => g.Date)
        @Html.TextBoxFor(g => g.Date, new { @class = "form-control",placeholder ="e.g 1 jan 2015" })
        @Html.ValidationMessageFor(g => g.Date)




    </div>
    <div class="form-group">

        @Html.LabelFor(g => g.Time)
        @Html.TextBoxFor(g => g.Time, new { @class = "form-control", placeholder = "e.g 20:00" })
        @Html.ValidationMessageFor(g => g.Time)



    </div>

    <div class="form-group">

        @Html.LabelFor(g => g.GenreId);
        @Html.DropDownListFor(g => g.GenreId, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.GenreId)


    </div>


    <button type="submit" class="btn btn-primary btn-lg">Save</button>

    @Html.HiddenFor(g => g.Id);


}


@section scripts

    {



    @Scripts.Render("~/bundles/jqueryval")


}





